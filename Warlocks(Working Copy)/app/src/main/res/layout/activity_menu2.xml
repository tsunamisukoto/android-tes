<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".MenuActivity"
    android:background="@drawable/menu_splash">


    <RelativeLayout
        android:id="@+id/button1"
        android:clickable="true"
        android:background="@drawable/button_shape3"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/menu_icon_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="10dp">
        </ImageView>
        <TextView
            android:id="@+id/text"
            android:text="Resume"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/image"
            android:layout_centerInParent="true"
            android:textColor="#5C9DFF"></TextView>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/button2"
        android:clickable="true"
        android:background="@drawable/button_shape_2"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/menu_icon_singleplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="10dp">
        </ImageView>
        <TextView
            android:id="@+id/text"
            android:text="SinglePlayer"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/image"
            android:layout_centerInParent="true"
            android:textColor="#5C9DFF"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/button3"
        android:clickable="true"
        android:background="@drawable/button_shape_2"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/menu_icon_multiplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="10dp">
        </ImageView>
        <TextView
            android:id="@+id/text"
            android:text="Multiplayer"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/image"
            android:layout_centerInParent="true"
            android:textColor="#5C9DFF"></TextView>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/button4"
        android:clickable="true"
        android:background="@drawable/button_shape_2"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/image"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true"
            android:src="@drawable/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
        </ImageView>
        <TextView
            android:id="@+id/text"
            android:text="Logout"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/image"
            android:layout_centerInParent="true"
            android:textColor="#5C9DFF"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button9"
        android:clickable="true"
        android:background="@drawable/button_shape_2"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/image"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true"
            android:src="@drawable/menu_icon_achievements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
        </ImageView>
        <TextView
            android:id="@+id/text"
            android:text="Achievements"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/image"
            android:layout_centerInParent="true"
            android:textColor="#5C9DFF"></TextView>
    </RelativeLayout>


    <RelativeLayout
    android:id="@+id/button5"
        android:clickable="true"
        android:background="@drawable/buttonshape"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/image"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true"
            android:src="@drawable/menu_icon_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
        </ImageView>
        <TextView
            android:id="@+id/text"
            android:text="Shop"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/image"
            android:layout_centerInParent="true"
            android:textColor="#5C9DFF"></TextView>
    </RelativeLayout>

</RelativeLayout>