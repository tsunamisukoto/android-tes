<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ground">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JoinServer"
            android:id="@+id/joinserver"
            android:textColor="#ffffff"
            android:background="@android:drawable/btn_default"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/textView2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/MultiPlayerButton"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <RadioGroup
            android:id="@+id/radioOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:layout_above="@+id/joinserver"
            android:layout_alignLeft="@+id/joinserver">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ellipse"
                android:id="@+id/radioButton"
                android:textColor="#ffffff"
                android:layout_below="@+id/editText"
                android:layout_toRightOf="@+id/radioOptions"
                android:checked="true"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donut"
                android:id="@+id/radioButton3"
                android:textColor="#ffffff"
                android:checked="false"
                android:layout_below="@+id/radioButton2"
                android:layout_toRightOf="@+id/radioOptions"/>

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rectangular"
                android:id="@+id/radioButton2"
                android:textColor="#ffffff"
                android:layout_below="@+id/radioButton"
                android:layout_toRightOf="@+id/radioOptions"/>
    </RadioGroup>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug"
            android:id="@+id/debug"
            android:enabled="true"
            android:checked="true"
            android:clickable="true"
            android:layout_above="@+id/radioOptions"
            android:layout_alignLeft="@+id/radioOptions"
            android:textColor="#ffffff"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MapOptions"
            android:id="@+id/textView2"
            android:editable="false"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LeftHandMode:"
            android:id="@+id/lefthandmode"
            android:enabled="true"
            android:checked="false"
            android:clickable="true"
            android:textColor="#ffffff"
            android:layout_above="@+id/debug"
            android:layout_alignRight="@+id/debug"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BeginServer"
            android:id="@+id/beginserver"
            android:textColor="#ffffff"
            android:background="@android:drawable/btn_default"
            android:layout_below="@+id/radioOptions"
            android:layout_toLeftOf="@+id/joinserver"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/debug"
            android:layout_toRightOf="@+id/textView"
            android:textColor="#ffffff"/>

</RelativeLayout><!-- From: file:/F:/SuperDesktop/WarlocksGradleProject/MyApplication/src/main/res/layout/multiplayeroptions.xml -->