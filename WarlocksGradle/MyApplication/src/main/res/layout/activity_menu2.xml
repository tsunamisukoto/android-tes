<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|top"
    tools:context=".MenuActivity" >


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:src="@drawable/characteridle" style="@style/FullscreenTheme"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:text="@string/ResumeButton"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"/>




    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:text="@string/SinglePlayerButton"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/button"/>


    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:text="@string/MultiPlayerButton"
        android:enabled="true"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"/>



    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:text="@string/LogoutButton"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"/>

    <Button
            android:layout_width="200dp"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:text="Achievements"
            android:id="@+id/button"
            android:layout_below="@+id/button2"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>